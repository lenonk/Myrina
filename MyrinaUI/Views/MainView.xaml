             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:MyrinaUI.ViewModels;assembly=MyrinaUI"
             xmlns:settings="clr-namespace:MyrinaUI.Views;assembly=MyrinaUI"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="850"
             x:Class="MyrinaUI.Views.MainView">

  <UserControl.Resources>
    <vm:StringToBoolConverter x:Key="StringToBoolConverter" />
    <vm:NegativeStringToBoolConverter x:Key="NegativeStringToBoolConverter" />
  </UserControl.Resources>

