<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:MyrinaUI.ViewModels;assembly=MyrinaUI"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MyrinaUI.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico" Name="mainWindow"
        Title="Myrina" Height="550" Width="1120">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>
    <Grid
      ColumnDefinitions="10, auto, *, 10"
      RowDefinitions="*, 150, 10">

      <!-- Row 0 Col 1-->
      <ScrollViewer Grid.Row="0"
                    Grid.Column="1"
                    Margin="4,4,4,0"
                    HorizontalScrollBarVisibility="Auto">
        <DataGrid 
          SelectionMode="Single"
          VerticalAlignment="Top"
          HorizontalAlignment="Left"
          IsReadOnly="True" 
          AutoGenerateColumns="True" 
          Items="{Binding EC2Instances}" />
      </ScrollViewer>

      <!-- Row 5 Col 0-->
      <TabControl Margin="2,4,0,0" Grid.Row="1" Grid.Column="1">
        <TabItem Header="Description">
          <Grid ColumnDefinitions="*,*" RowDefinitions="auto, auto, auto, auto, auto">
            <TextBlock Grid.Row="0" Grid.Column="0" Text="Availability Zone" />
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Availability Zone" />
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Availability Zone" />
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Availability Zone" />
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Availability Zone" />

            <TextBlock Grid.Row="0" Grid.Column="1" Text="Availability Zone" />
            <TextBlock Grid.Row="1" Grid.Column="1" Text="Availability Zone" />
            <TextBlock Grid.Row="2" Grid.Column="1" Text="Availability Zone" />
            <TextBlock Grid.Row="3" Grid.Column="1" Text="Availability Zone" />
            <TextBlock Grid.Row="4" Grid.Column="1" Text="Availability Zone" />
          </Grid>
        </TabItem>
        <TabItem Header="Status Checks"/>
        <TabItem Header="Monitoring"/>
        <TabItem Header="Tags"/>
      </TabControl>

      <!-- Row 0 Col 5 -->
      <Grid 
        Grid.Row="0" 
        Grid.Column="2"
        ColumnDefinitions="*, *"
        RowDefinitions="auto, auto, auto">
        <ComboBox Margin="4,4,0,4" MinWidth="100" Grid.Row="0" Grid.Column="0" 
                  Items="{Binding EC2AvailabilityZones}" 
                  SelectedItem="{Binding SAvailabilityZone, Mode=TwoWay}" />
        
        <ComboBox Margin="4,4,0,4" MinWidth="100" Grid.Row="0" Grid.Column="1" 
                  Items="{Binding EC2InstanceTypes}"
                  SelectedItem="{Binding SInstanceType, Mode=TwoWay}" />

        <ComboBox Margin="4,4,0,4" MinWidth="100" Grid.Row="1" Grid.Column="0"
                  Items="{Binding EC2Subnets}"
                  SelectedItem="{Binding SSubnet, Mode=TwoWay}">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding SubnetId}" />
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>

        <ComboBox Margin="4,4,0,4" MinWidth="100" Grid.Row="1" Grid.Column="1"
                  Items="{Binding EC2Amis}"
                  SelectedItem="{Binding SAmi, Mode=TwoWay}">
          <ComboBox.ItemTemplate>
            <DataTemplate>
              <TextBlock Text="{Binding Name}" />
            </DataTemplate>
          </ComboBox.ItemTemplate>
        </ComboBox>

        <Button MinHeight="30" Margin="4,0,0,4" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                Content="Launch" Command="{Binding LaunchEC2Instance}" />
      </Grid>
    </Grid>
</Window>
